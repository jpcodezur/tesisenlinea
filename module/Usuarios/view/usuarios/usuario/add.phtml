                        inputEmail.next().text("El email no es valido");
                        emailValido = false;
                        return;
                    }


                    var loading = "<?php echo $this->basePath('assets/img/loading.gif') ?>";
                    inputEmail.parent().append("<img id='loading-gif' src='" + loading + "'>");
                    $.get("<?php echo $this->url("usuarios", array("controller" => "usuario", "action" => "validarEmail")) ?>"
                        ,{email: pEMail}
                        , function(data) {
                        if (data == "0") {
                            emailValido = false;
                            inputEmail.parent().parent().removeClass("success");
                            inputEmail.parent().parent().addClass("error");
                            inputEmail.next().text("El email ya esta registrado");
                        }
                        if (data == "1") {
                            inputEmail.parent().parent().removeClass("error");
                            inputEmail.parent().parent().addClass("success");
                            inputEmail.next().text("");
                            emailValido = true;
                        }
                        $(document).find("#loading-gif").remove();
                        email = pEMail;
                    });
